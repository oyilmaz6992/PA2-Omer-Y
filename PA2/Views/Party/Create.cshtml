@model EventDetails

<h2>Create a New Event</h2>

<!-- Event Creation Form -->
<form asp-action="Create" method="post">

    <!-- Input Field for Event Title -->
    <div class="form-group">
        <label asp-for="Title">Event Title</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Date Picker for Event Scheduling -->
    <div class="form-group">
        <label asp-for="EventDate">Event Date</label>
        <input asp-for="EventDate" type="date" class="form-control" required />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>

    <!-- Input Field for Event Venue -->
    <div class="form-group">
        <label asp-for="Venue">Venue</label>
        <input asp-for="Venue" class="form-control" required />
        <span asp-validation-for="Venue" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-success">Create Event</button>
</form>

<!-- Navigation Button to Return to Events List -->
<a asp-controller="Event" asp-action="Index" class="btn btn-secondary">Back to Events</a>
