@model IEnumerable<EventDetails>

<h2>Upcoming Events</h2>

<!-- Button to Create a New Event -->
<a asp-controller="Event" asp-action="Create" class="btn btn-primary">Host a New Event</a>

<!-- Table Displaying All Events -->
<table class="table">
    <thead>
        <tr>
            <th>Event Title</th>
            <th>Date</th>
            <th>Venue</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Title</td>
                <td>@eventItem.EventDate.ToShortDateString()</td>
                <td>@eventItem.Venue</td>
                <td>
                    <a asp-controller="Event" asp-action="Edit" asp-route-id="@eventItem.Id" class="btn btn-warning">Modify</a>
                    <a asp-controller="Invitation" asp-action="Manage" asp-route-eventId="@eventItem.Id" class="btn btn-info">Manage Guests</a>
                    <a asp-controller="Event" asp-action="Delete" asp-route-id="@eventItem.Id" class="btn btn-danger">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
